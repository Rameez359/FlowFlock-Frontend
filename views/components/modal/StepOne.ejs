<div class="modal-content-step-one display-none" id="modal-content-step-one">
    <div class="signup-steps modal-top">
        <div class="close-btn" onclick="closeModal()">
            <a class="close">&times;</a>
        </div>
        <div class="steps-count">
            <strong>Step 1 of 3</strong>
        </div>
    </div>
    <div class="create-account-info modal-inner-content">
        <div class="modal-inner-head create-account-text">
            <h1>Create your account</h1>
        </div>
        <div>
            <div class="label">
                <label for="name"><strong>Name</strong></label>
            </div>
            <div class="modal-input signup-input">
                <input type="text" id="name" autocomplete="off" />
            </div>
        </div>
        <div>
            <div class="label">
                <label for="email"><strong>Email</strong></label>
            </div>
            <div class="modal-input">
                <input type="email" id="email" autocomplete="off" onchange="checkEmail()" />
            </div>
            <div class="inValidEmail display-none" id="inValidEmail">
                <div class="error">*Please Enter Valid Email Address.</div>
            </div>
        </div>
        <div class="date-of-birth">
            <div class="dob-text">
                <h4>Date of birth</h4>
            </div>
            <div class="day-month-year">
                <div class="month">
                    <label for="month"><strong>Month</strong></label>
                    <select id="month">
                        <option value="1">January</option>
                        <option value="2">February</option>
                        <option value="3">March</option>
                        <option value="4">April</option>
                        <option value="5">May</option>
                        <option value="6">June</option>
                        <option value="7">July</option>
                        <option value="8">August</option>
                        <option value="9">September</option>
                        <option value="10">October</option>
                        <option value="11">November</option>
                        <option value="12">December</option>
                    </select>
                </div>
                <div class="day">
                    <div class="dob-label"></div>
                    <label for="day"><strong>Day</strong></label>
                    <select id="day"></select>
                </div>
                <div class="year">
                    <label for="year"><strong>Year</strong></label>
                    <select id="year" name="year"></select>
                </div>
            </div>
        </div>
    </div>
    <div class="register-error modal-error display-none" id="register-error">
        <div class="error">*Incomplete information. Please fill out all fields.</div>
    </div>
    <div class="register modal-btn" onclick="registerStepOne()">
        <a class="register-next modal-btn-txt">
            <strong>Register</strong>
        </a>
    </div>
</div>
